YSD_V004_VALMACE-UNAME .
YSD_T004_VALMACE-AEDTM =
YSD_V004_VALMACE-AEDTM .
YSD_T004_VALMACE-UZEIT =
YSD_V004_VALMACE-UZEIT .
    IF SY-SUBRC = 0.
    UPDATE YSD_T004_VALMACE ##WARN_OK.
    ELSE.
    INSERT YSD_T004_VALMACE .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
