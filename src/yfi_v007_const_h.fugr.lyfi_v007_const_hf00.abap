     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM YFI_T007_CONST_H WHERE
  APLICA = YFI_V007_CONST_H-APLICA AND
  CGROUP = YFI_V007_CONST_H-CGROUP .
    IF SY-SUBRC = 0.
    DELETE YFI_T007_CONST_H .
